<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/moment_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MomentsActivity">

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/moment_smart_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srlHeaderInsetStart="200dp"
        app:srlHeaderTriggerRate="0.25">

        <com.thoughtworks.androidtrain.headers.MomentsRefreshHeader
            android:id="@+id/moment_refresh_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/user_profile_background"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/gray"
                android:contentDescription="@string/user_profile_background_image"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/moment_user_profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:translationY="16dp"
                app:layout_constraintBottom_toBottomOf="@id/moment_user_profile_avatar"
                app:layout_constraintEnd_toStartOf="@id/moment_user_profile_avatar"
                app:layout_constraintTop_toTopOf="@id/moment_user_profile_avatar" />

            <ImageView
                android:id="@+id/moment_user_profile_avatar"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/avatar"
                android:translationY="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </com.thoughtworks.androidtrain.headers.MomentsRefreshHeader>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/moment_content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/moment_content_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="200dp"
                app:layoutManager="LinearLayoutManager" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="892dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="-221dp" />
</androidx.constraintlayout.widget.ConstraintLayout>